<nav class="bg-white shadow-md p-4 flex justify-between items-center flex-wrap" style="background-color: #f4ecbc;" role="navigation" aria-label="Main navigation">
  <!-- Logo -->
  <a href="/" class="text-xl font-bold text-black focus:outline-none focus:ring-2 focus:ring-black">Quotes</a>

  <!-- Hamburger button (always visible) -->
  <button id="menu-btn" aria-label="Toggle menu" aria-expanded="false"
    class="focus:outline-none focus:ring-2 focus:ring-black">
    <svg class="w-6 h-6 text-black" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="3" y1="6" x2="21" y2="6" />
      <line x1="3" y1="12" x2="21" y2="12" />
      <line x1="3" y1="18" x2="21" y2="18" />
    </svg>
  </button>

  <!-- Collapsible Menu -->
  <ul id="menu"
    class="hidden w-full flex-col space-y-2 mt-4 font-semibold text-black text-center"
    role="list">
    <li>
      <a href="/" class="hover:underline focus:outline-none focus:ring-2 focus:ring-black">Home</a>
    </li>
    <li>
      <a href="/about" class="hover:underline focus:outline-none focus:ring-2 focus:ring-black">About</a>
    </li>
    <li>
      <a href="/contact" class="hover:underline focus:outline-none focus:ring-2 focus:ring-black">Contact</a>
    </li>
  </ul>

  <style>
    #menu.show {
      display: flex !important;
      animation: slideDown 0.3s ease forwards;
    }

    #menu.hide {
      animation: slideUp 0.3s ease forwards;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideUp {
      from {
        opacity: 1;
        transform: translateY(0);
      }
      to {
        opacity: 0;
        transform: translateY(-10px);
      }
    }
  </style>
</nav>

<script>
  const btn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');

  btn.addEventListener('click', () => {
    if (menu.classList.contains('show')) {
      menu.classList.remove('show');
      menu.classList.add('hide');
      btn.setAttribute('aria-expanded', 'false');
      menu.addEventListener('animationend', () => {
        menu.classList.remove('hide');
        menu.style.display = 'none';
      }, { once: true });
    } else {
      menu.style.display = 'flex';
      menu.classList.add('show');
      btn.setAttribute('aria-expanded', 'true');
    }
  });
</script>
